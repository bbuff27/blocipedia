<h1><%= @wiki.title %></h1>
<div class="row">
  <div class="col-md-8">
    <p><%= @wiki.body %></p>
  </div>  
  <div class="col-md-4">
    <%= link_to "Edit Wiki", edit_wiki_path(@wiki), class: "btn btn-success"  %>
    <% if policy(@wiki).destroy? %>
      <%= link_to 'Destroy', @wiki, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
</div>